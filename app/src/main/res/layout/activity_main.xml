<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="@dimen/layout_marginEnd">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:circularflow_radiusInDP="@dimen/cornerRadius"
        tools:context=".MainActivity">

        <TextView
            android:id="@+id/txtHeader"
            style="@style/txtHeader" />

        <EditText
            android:id="@+id/etName"
            style="@style/etStyle1"
            android:background="@drawable/border"
            android:hint="@string/enter_name"
            android:importantForAutofill="no"
            android:inputType="textPersonName"
            tools:ignore="TextContrastCheck" />

        <EditText
            android:id="@+id/etEmail"
            style="@style/etStyle1"
            android:background="@drawable/border"
            android:hint="@string/enter_email"
            android:importantForAutofill="no"
            android:inputType="textEmailAddress"
            tools:ignore="TextContrastCheck" />


        <EditText
            android:id="@+id/etPwd"
            style="@style/etStyle1"
            android:hint="@string/enter_password"
            android:importantForAutofill="no"
            android:inputType="textPassword"
            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck,TextContrastCheck" />


        <EditText
            android:id="@+id/etPhone"
            style="@style/etStyle"
            android:hint="@string/enter_phone_number"
            android:importantForAutofill="no"
            android:inputType="phone"
            tools:ignore="TextContrastCheck" />

        <TextView
            android:id="@+id/txtAge"
            style="@style/textView" />

        <NumberPicker
            android:id="@+id/npAge"
            android:layout_width="match_parent"
            android:layout_height="@dimen/npHeight"
            android:layout_gravity="center"
            android:layout_margin="@dimen/margin"
            android:background="@drawable/border"
            android:orientation="horizontal" />

        <Button
            android:id="@+id/btn"
            style="@style/btnMain"
            tools:ignore="TextContrastCheck" />

    </LinearLayout>

</ScrollView>